    <style name="CalcValueStyle">

        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Headline6</item>
        <item name="android:maxLines">1</item>
        <item name="autoSizeMaxTextSize">24sp</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeStepGranularity">1sp</item>
    </style>
    <style name="CalcNumberBtnStyle">
        <item name="android:background">?selectableItemBackground</item>
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Headline5</item>
        <item name="android:textSize">28sp</item>
    </style>

    <style name="primary_btn" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="shapeAppearance">@style/MyShapeAppearance</item>
        <item name="backgroundTint">@color/colorPrimaryDark</item>
        <item name="strokeColor">@color/colorPrimaryDark</item>
        <item name="android:paddingBottom">@dimen/padding_18</item>
        <item name="android:paddingTop">@dimen/padding_18</item>
        <item name="android:paddingLeft">@dimen/padding_12</item>
        <item name="android:paddingRight">@dimen/padding_12</item>
        <item name="android:textColor">@color/white</item>
        <item name="rippleColor">@color/primary_text_ripple</item>
    </style>

    <style name="MyShapeAppearance">
        <item name="cornerFamilyTopLeft">rounded</item>
        <item name="cornerFamilyBottomLeft">rounded</item>
        <item name="cornerFamilyTopRight">rounded</item>
        <item name="cornerFamilyBottomRight">rounded</item>
        <item name="cornerSize">@dimen/size_4</item>

    </style>
    <style name="FlatButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="rippleColor">@color/colorAccent</item>
        <item name="strokeColor">@android:color/transparent</item>
        <item name="colorAccent">@color/white</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>
    <style name="FlatButtonPrimary" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="rippleColor">@color/colorPrimaryDark</item>
        <item name="strokeColor">@android:color/transparent</item>
        <item name="colorAccent">@color/white</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="whiteIconToolbar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorPrimaryInverse">@color/white</item>
        <item name="android:textColor">@color/white</item>

    </style>


</resources>